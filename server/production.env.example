# BookSphere Production Environment Configuration
# Copy this file to .env and update the values for your deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
TRUST_PROXY=true

# Database Configuration
DATABASE_URL=postgresql://bookuser:your_password@localhost:5432/bookphere

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -hex 32
JWT_SECRET=your_64_character_jwt_secret_key_change_this_in_production_for_security
JWT_REFRESH_SECRET=your_64_character_refresh_secret_key_change_this_in_production_for_security
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
# For production, specify exact domains: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
UPLOAD_PATH=/opt/bookphere/uploads
MAX_FILE_SIZE=104857600
SIGNED_URL_EXPIRY=3600

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/bookphere/app.log

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# WebSocket Configuration
WS_CORS_ORIGIN=*
WS_MAX_CONNECTIONS=1000

# Performance
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# Health Check
HEALTH_CHECK_PATH=/api/health

# Optional: Redis for Session Storage
# REDIS_URL=redis://localhost:6379

# Optional: AWS S3 for File Storage
# S3_BUCKET=your-bookphere-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key